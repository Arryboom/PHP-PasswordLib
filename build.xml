<?xml version="1.0" encoding="UTF-8"?>
<project name="PHP-CryptLib" default="" basedir=".">
    <target name="clean">
        <delete dir="build" />
    </target>
    <target name="prepare">
        <mkdir dir="build/results" />
    </target>
    <target name="cs">
        <phpcodesniffer standard="Squiz">
            <formatter type="default" usefile="false" />
            <formatter type="checkstyle" outfile="build/results/checkstyle.xml" />
            <fileset dir="lib">
                <include name="**/*.php" />
            </fileset>
        </phpcodesniffer>
    </target>
</project>
